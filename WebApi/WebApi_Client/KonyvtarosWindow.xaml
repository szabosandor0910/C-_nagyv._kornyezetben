<Window x:Class="WebApi_Client.KonyvtarosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApi_Client"
        mc:Ignorable="d"
        Title="Konyvtaros" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Könyvek" FontWeight="Bold" Margin="15, 15, 15, 0"/>

        <ListBox x:Name="BookListBox" Grid.Row="1" Margin="15" SelectionMode="Single" SelectionChanged="ListBox_SelectionChanged"/>

        <Button Grid.Row="2" Content="Új könyv" Width="100" HorizontalAlignment="Right" Margin="15, 0, 15, 15" Click="UjKonyv_Click"/>


    </Grid>
</Window>
