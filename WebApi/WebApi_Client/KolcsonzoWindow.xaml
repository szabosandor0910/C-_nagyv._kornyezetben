<Window x:Class="WebApi_Client.KolcsonzoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApi_Client"
        mc:Ignorable="d"
        Title="Kölcsönzéseid" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Könyvek (Add meg a neved hogy leszűrd a saját kölcsönzéseidet.)" FontWeight="Bold" Margin="15, 15, 15, 0"/>

        <ListBox x:Name="BookListBox" Grid.Row="1" Margin="15" FontSize="12 pt" SelectionMode="Single"/>



        <TextBox x:Name="NevTextBox" Grid.Column="1" Grid.Row="2" Margin="10" Width="200"/>
        <Button Grid.Row="2" Content="Név keresése" Width="100" HorizontalAlignment="Left" Margin="505,8,0,7" Click="Kereses_Click" />



    </Grid>
</Window>
