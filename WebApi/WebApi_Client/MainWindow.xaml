<Window x:Class="WebApi_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApi_Client"
        mc:Ignorable="d"
        Title="Könyvtár alkalmazás" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Válaszd ki a szerepkört!" FontWeight="Bold" Margin="15, 15, 15, 0"/>
        <Button Grid.Row="1" Content="Könyvtáros" Width="139" HorizontalAlignment="Right" Margin="0,152,521,-201" Click="Konyvtaros_Click"/>
        <Button Grid.Row="1" Content="Könyv hozzáadása" Click="AddBook_Click"/>
        <Button Grid.Row="1" Content="Kölcsönző" Width="139" HorizontalAlignment="Right" Margin="0,152,162,-201" Click="Kolcsonzo_Click"/>


    </Grid>
</Window>
